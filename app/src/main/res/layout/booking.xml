<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <RadioButton
            android:id="@+id/radioOneWay"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:text="@string/radio_oneway"
            android:checked="true"

            />
        <RadioButton
            android:id="@+id/radioTrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_trip"
            />


    </RadioGroup>

<LinearLayout
    android:layout_width="400dp"
    android:layout_height="40dp">
    <CheckedTextView
        android:text="From"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/fromTextView"
        android:layout_gravity="center_horizontal"
        android:checked="true"/>

    <AutoCompleteTextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/autoCompleteTextViewFROM"
        android:layout_weight="1" />

</LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="40dp">
        <CheckedTextView
            android:text="To"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:id="@+id/tochecktextView"
            android:layout_gravity="center_horizontal"
            android:checked="true"/>
        <AutoCompleteTextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/autoCompleteTextViewTO"
            android:layout_weight="1" />

    </LinearLayout>



    <TextView
        android:text="Departure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deptext"
        android:layout_weight="1" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Spinner
            android:layout_width="96dp"
            android:layout_height="38dp"
            android:id="@+id/daysSpinner"
            android:entries="@array/days"/>

        <Spinner
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/monthsSpinner"
            android:entries="@array/months"/>
        <Spinner
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/yearsSpinner"
            android:entries="@array/years"/>


    </LinearLayout>

    <TextView
        android:text="Return "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/arvtext"
        android:layout_weight="1" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Spinner
            android:layout_width="96dp"
            android:layout_height="38dp"
            android:id="@+id/daysSpinner2"
            android:entries="@array/days"/>

        <Spinner
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/monthsSpinner2"
            android:entries="@array/months"/>
        <Spinner
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/yearsSpinner2"
            android:entries="@array/years"/>




    </LinearLayout>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editText" />

    <Button
        android:text="Search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/searchButton" />

    <ListView
        android:id="@+id/listViewflights"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>