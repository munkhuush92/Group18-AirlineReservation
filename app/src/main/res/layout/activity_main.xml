<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp" >

    <TextView
        android:id="@+id/loginStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  />
    <!--<ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/golden_airlines"/> -->
    <Space
        android:layout_width="1dp"
        android:layout_height="60dp"/>
    <Button
        style="@style/uw_button"
        android:text="Book a Flight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="bookFlightButtonPress"/>
    <Space
        android:layout_width="1dp"
        android:layout_height="30dp"/>
    <Button
        style="@style/clear_button"
        android:text="Book Flight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bookButton" />
    <Space
        android:layout_width="1dp"
        android:layout_height="30dp"/>
    <Button
        style="@style/uw_button"
        android:text="My trip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mytripButton" />
    <Space
        android:layout_width="1dp"
        android:layout_height="30dp"/>
    <Button
        style="@style/uw_button"
        android:text="Flight Status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fstatusButton" />



</LinearLayout>
